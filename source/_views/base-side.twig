{% extends "base.twig" %}
{% block content_wrapper %}
    <div class="columns">
        <div class="side-navigation">
            {% if page.nav %}
                <div class="context-navigation">
                    {% for items in page.nav %}
                        <h3>{{ items.name }}</h3>
                        <ul>
                            {% for item in items.value %}
                                <li><a href="{{ site.url }}/{{ item.href }}">{{ item.name }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                </div>
            {% endif %}

            {% block side %}{% endblock %}
        </div>
        <div class="main-content">
            <h1>{{ page.title }}</h1>
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}
